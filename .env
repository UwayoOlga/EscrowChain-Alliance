# --- OAuth Credentials ---
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_real_google_client_id_here
GOOGLE_CLIENT_SECRET=your_real_google_client_secret_here

# Get these from Apple Developer: https://developer.apple.com/
APPLE_CLIENT_ID=your_apple_service_id_here
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY_PATH=./server/apple_private_key.p8

# --- Email OTP (SMTP Settings) ---
# Used for the manual registration flow
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# --- Security ---
SESSION_SECRET=a_random_very_long_string_here

# --- App Settings ---
PORT=5000
